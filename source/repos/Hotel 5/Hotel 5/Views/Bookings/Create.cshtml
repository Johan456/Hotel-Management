@model Hotel_5.ViewModel.BookingRoom

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bookings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="bookings.CheckInDate" class="control-label"></label>
                @Html.EditorFor(m => m.bookings.CheckInDate, "{0:dd/MM/yyyy}",
               new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                <span asp-validation-for="bookings.CheckInDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bookings.CheckOutDate" class="control-label"></label>
                @Html.EditorFor(m => m.bookings.CheckOutDate, "{0:dd/MM/yyyy}",
               new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                <span asp-validation-for="bookings.CheckOutDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rooms.RoomType" class="control-label"></label>
                @Html.DropDownList("RoomType",
                    new SelectList(Enum.GetValues(typeof(RoomTypes))),
                    new { @class = "form-control" })
            </div>
            
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
